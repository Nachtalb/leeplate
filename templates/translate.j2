{% extends "base.j2" %}

{% block content %}
  <div class="row justify-content-center">
    <div class="col-md-10">
      <form id="translate-form">
        <div class="row">
          <div class="col-md-6">
            <div class="form-group position-relative">
              <textarea name="text" id="text" class="form-control" rows="10" placeholder="Input Text"></textarea>
              <button class="btn btn-secondary position-absolute end-0 bottom-0 m-2" type="button" id="copyInputButton" disabled>
                <i class="bi bi-clipboard2"></i>
              </button>
            </div>
            <div class="form-group">
              <label for="source_language">Source Language</label>
              <div class="input-group mb-3">
                <select name="source_language" id="source_language" class="form-control" value="auto">
                  <option value="auto">Auto Detect</option>
                  {% for lang_code, lang_name in languages.items() %}
                  <option value="{{ lang_code }}">{{ lang_name }}</option>
                  {% endfor %}
                </select>
                <button id="input-audio-button" type="button" class="btn btn-secondary" disabled>
                  <i class="bi bi-volume-up"></i>
                </button>
                <button id="input-audio-download-button" type="button" class="btn btn-secondary" disabled>
                  <i class="bi bi-download"></i>
                </button>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group position-relative">
              <textarea name="translation" id="translation" class="form-control" rows="10" placeholder="Output Text"></textarea>
              <button class="btn btn-secondary position-absolute end-0 bottom-0 m-2" type="button" id="copyOutputButton" disabled>
                <i class="bi bi-clipboard2"></i>
              </button>
            </div>
            <div class="form-group">
              <label for="target_language">Target Language</label>
              <div class="input-group mb-3">
                <select name="target_language" id="target_language" class="form-control">
                  {% for lang_code, lang_name in languages.items() %}
                    <option value="{{ lang_code }}" {% if lang_code == default_lang %}selected{% endif %}>{{ lang_name }}</option>
                  {% endfor %}
                </select>
                <button id="output-audio-button" type="button" class="btn btn-secondary" disabled>
                  <i class="bi bi-volume-up"></i>
                </button>
                <button id="output-audio-download-button" type="button" class="btn btn-secondary" disabled>
                  <i class="bi bi-download"></i>
                </button>
              </div>
            </div>
          </div>
          <div class="form-group mt-3">
            <div class="text-center">
              <button type="submit" class="btn btn-primary">Translate</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
{% endblock %}
